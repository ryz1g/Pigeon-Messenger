#:import threading threading
#:import Factory kivy.factory.Factory

<Button>
    font_name:"Fonts/Oswald-VariableFont_wght.ttf"

<Label>
    font_name:"Fonts/Oswald-VariableFont_wght.ttf"

<TextInput>
    font_name:"Fonts/Oswald-VariableFont_wght.ttf"

<ToggleButton>
    font_name:"Fonts/Oswald-VariableFont_wght.ttf"

ScreenManager:
    id:manager

    Screen:
        name:"home_layout"

        AnchorLayout:
            anchor_x:"center"
            anchor_y:"center"
            size_hint:(None,None)
            size:(500,800)

            Image:
                source:"Images/chat_bgg.jpg"

        AnchorLayout:
            size:root.width,root.height
            #size_hint:(0.5,0.5)
            anchor_x:"center"
            anchor_y:"top"

            BoxLayout:
                orientation:"vertical"
                size_hint:(0.1,0.1)
                
                Label:
                    text:"Pigeon is a P2P messaging app! (Currently supporting only text messages)"

        AnchorLayout:
            anchor_x:"center"
            anchor_y:"bottom"

            BoxLayout:
                orientation:"vertical"
                size_hint:(1,0.3)
                padding:3
                spacing:3

                Label:
                    text:"Enter IP Address!"
                    font_size:"25"

                TextInput:
                    id:ip_enter
                    size_hint:(1,0.35)
                    halign:"center"
                    multiline:False
                    on_text_validate:
                        threading.Thread(target=app.clock, args=(header,), daemon=True).start()
                        app.initialize(disp)
                        #header.text="            IP:"+ip_enter.text+"            Time:00:00:00"
                        ip_enter.text=""
                        manager.transition.duration=0.3
                        manager.current="chat_layout"
                        manager.transition.direction="left"

                BoxLayout:
                    orientation:"horizontal"
                    spacing:3

                    Button:
                        text:"Connect"
                        background_down:"Icons/footer_1.png"
                        background_normal:"Icons/footer_2.png"
                        on_release:
                            threading.Thread(target=app.clock, args=(header,), daemon=True).start()
                            app.initialize(disp)
                            #header.text="            IP:"+ip_enter.text+"            Time:00:00:00"
                            ip_enter.text=""
                            manager.transition.duration=0.3
                            manager.current="chat_layout"
                            manager.transition.direction="left"


                    Button:
                        text:"Quit"
                        background_down:"Icons/footer_1.png"
                        background_normal:"Icons/footer_2.png"
                        on_release:
                            app.exit()

    Screen:
        name:"chat_layout"

        AnchorLayout:
            size: root.width, root.height
            anchor_x:"center"
            anchor_y:"center"

            Image:
                source:"Images/chat_bgg.jpg"
                allow_stretch:True
                keep_ratio:False

            BoxLayout:
                orientation:"horizontal"

                GridLayout:
                    cols:1
                    rows:3

                    AnchorLayout:
                        anchor_x:"center"
                        size_hint:(1,0.05)

                        Image:
                            source:"Icons/header.png"
                            allow_stretch:True
                            keep_ratio:False

                        BoxLayout:
                            orientation:"horizontal"

                            Button:
                                text:"Back"
                                background_normal:"Icons/header_back_2.png"
                                background_down:"Icons/header_back_1.png"
                                size_hint: (0.2,1)
                                pos_hint:{"top":1}
                                on_release:
                                    manager.current="home_layout"
                                    manager.transition.direction="right"
                                    manager.transition.duration=0.3
                                    app.clear_chat()

                            Label:
                                id:header
                                text:"00:00:00"
                                color: (1,1,1,0.85)
                                pos_hint: {"top":1}
                                font_size: 25
                                italic:True

                            Button:
                                text:"Call"
                                background_normal:"Icons/header_call_2.png"
                                background_down:"Icons/header_call_1.png"
                                size_hint: (0.2,1)
                                pos_hint:{"top":1}
                                on_release:
                                    #your_cam.play=True
                                    #manager.current="call_layout"
                                    #manager.transition.direction="left"
                                    #manager.transition.duration=0.3

                    ScrollView:
                        BoxLayout:
                            id:disp
                            orientation:"vertical"
                            spacing:8
                            padding:10
                            size_hint:(1,None)
                            height:4000

                    BoxLayout:
                        orientation:"horizontal"
                        size_hint: (1,0.06)
                        padding:2
                        spacing:5

                        TextInput:
                            id:t_input
                            text:"default"
                            font_size:18
                            multiline:False
                            halign:"right"
                            on_text_validate:app.send(t_input)

                        Button:
                            text:"Send"
                            background_normal:"Icons/footer_2.png"
                            background_down:"Icons/footer_1.png"
                            size_hint: 0.2,1
                            font_size: 16
                            on_release:app.send(t_input)

                        Button:
                            text:"Image"
                            background_normal:"Icons/footer_2.png"
                            background_down:"Icons/footer_1.png"
                            size_hint: 0.2,1
                            font_size:16
                            on_release:Factory.MyPop().open()

                        Button:
                            text:"Options"
                            background_normal:"Icons/footer_2.png"
                            background_down:"Icons/footer_1.png"
                            size_hint: 0.2,1
                            font_size:16
                            on_release:
                                app.send2(t_input)

    Screen:
        name:"call_layout"

        FloatLayout:
            #pos_hint:{'bottom':1}
            size:root.width,root.height

            Button:
                text:"Back"
                size_hint:(0.1,0.05)
                on_release:
                    manager.transition.duration=0.3
                    manager.transition.direction="right"
                    #your_cam.play=False
                    manager.current="chat_layout"

        AnchorLayout:
            size:root.width,root.height
            anchor_y:"bottom"
            anchoy_x:"right"

            Button:
                text:"Mic"
                size_hint:(0.06,0.05)
                on_release:
                    manager.transition.duration=0.3
                    manager.transition.direction="right"
                    manager.current="chat_layout"

        BoxLayout:
            size:root.width,root.height
            orientation:"vertical"

            Image:
                id:their_cam
                #play:True
                #resolution:(495,278)
                source:"Images/im1.jpg"

            Image:
                id:their_c
                source:"Images/im2.jpg"

            #Camera:
            #    id:your_cam
            #    play:False
            #    resolution:(495,278)
            #    #source:"Images/im2.jpg"

<MyPop@Popup>
    auto_dismiss: True
    title: "                                                     Choose Image!"
    size_hint:(0.9,0.7)
    pos_hint: {'center_x':0.5, 'center_y':0.5}
    BoxLayout:
        orientation: "vertical"
        spacing:2

        FileChooserListView:
            id:fc

        GridLayout:
            cols:2
            size_hint:(1,0.1)
            Button:
                text:"Send"
                size_hint: (0.5,0.2)
                on_release:
                    app.send_selected(fc.selection)
                    root.dismiss()
            Button:
                text:"Close"
                size_hint: (0.5,0.2)
                on_release: root.dismiss()
